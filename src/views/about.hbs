<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}}
                </h4>
                <p>{{description}}</p>
                <form action="#" method="">
                    <button type="submit" class="btn btn-success btn-block btn-sm">Ubicacion</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{user.name}} </h1>
            <p clsss="lead">No hay eventos agregados.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crea uno!</a>
        </div>
    </div>
    {{/each}}
</div>